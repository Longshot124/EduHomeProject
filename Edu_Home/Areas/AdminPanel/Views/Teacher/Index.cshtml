@*@using Edu_Home.DAL.Entities*@

@model List<Teacher>


<div class="row col-lg-12">
    <div class="col-lg-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>FullName</th>
                                <th>Position</th>
                                <th>Degree</th>
                                <th>Experience</th>
                                <th>Mail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   <td>
                                        <img style="border-radius:0px; object-fit:contain; height:100px; width:100px;" src="~/img/teacher/@item.ImageUrl" alt="image">
                                   </td>
                                    <td>@item.FullName</td>
                                    <td>@item.Position</td>
                                    <td>@item.Degree</td>
                                    <td>@item.Experience</td>
                                    <td>@item.Mail</td>

                                  
                                    <td class="text-nowrap">
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                <button class="btn btn-danger" id="delete-category" value="@item.Id">Delete</button>
                                            </form>
                                        </div>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
