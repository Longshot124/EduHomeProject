@using Edu_Home.Areas.AdminPanel.Models
@model AboutUpdateModel
@{
    ViewData["Title"] = "Update";
}
<div class="row col-sm-6">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Update category</h4>
                <img src="~/img/about/@Model.ImageUrl" style="width:130px;height:130px" />

                <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Image">Name</label>
                        <input asp-for="Image" class="form-control" placeholder="Name" accept="image/*">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ButtonText">Button Text</label>
                        <input asp-for="ButtonText" class="form-control" placeholder="Button Text">
                        <span asp-validation-for="ButtonText" class="text-danger"></span>
                    </div>
                    
                    @*<div class="form-group">
                    <label asp-for="ButtonUrl">ButtonUrl</label>
                    <input asp-for="ButtonUrl" class="form-control" placeholder="ButtonUrl">
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                    </div>*@

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>




