@using Edu_Home.Areas.AdminPanel.Models
@model FooterLogoUpdateModel

<style>
    .logoImage {
        width: 150px !important;
        height: 150px !important;
        object-fit: contain !important;
        border-radius: 0px !important;
    }
</style>
<div class="row col-sm-6">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create category</h4>
                <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
                    <div class="imagesTable">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <img class="logoImage" src="~/img/logo/@Model.LogoUrl">
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger removeProductImage" data-id="@Model.Id">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoImage">Logo</label>
                        <input asp-for="LogoImage" class="form-control" placeholder="Logo" accept="image/*">
                        <span asp-validation-for="LogoImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FacebookLink">FacebookLink</label>
                        <input asp-for="FacebookLink" class="form-control" placeholder="FacebookLink">
                        <span asp-validation-for="FacebookLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TwitterLink">TwitterLink</label>
                        <input asp-for="TwitterLink" class="form-control" placeholder="TwitterLink">
                        <span asp-validation-for="TwitterLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PisterestLink">PisterestLink</label>
                        <input asp-for="PisterestLink" class="form-control" placeholder="PisterestLink">
                        <span asp-validation-for="PisterestLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VimeoLink">VimeoLink</label>
                        <input asp-for="VimeoLink" class="form-control" placeholder="VimeoLink">
                        <span asp-validation-for="VimeoLink" class="text-danger"></span>
                    </div>


                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>




