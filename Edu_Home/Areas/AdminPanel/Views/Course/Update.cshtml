@using Edu_Home.Areas.AdminPanel.Models
@model CourseUpdateModel
@{
    ViewData["Title"] = "Update";
}
<div class="row col-sm-6">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Update category</h4>
                <img src="~/img/course/@Model.ImageUrl" style="width:130px;height:130px" />

                <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Image">Name</label>
                        <input asp-for="Image" class="form-control" placeholder="Name" accept="image/*">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="About">About</label>
                        <input asp-for="About" class="form-control" placeholder="About">
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apply">Apply</label>
                        <input asp-for="Apply" class="form-control" placeholder="Apply">
                        <span asp-validation-for="Apply" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Certification">Certification</label>
                        <input asp-for="Certification" class="form-control" placeholder="Certification">
                        <span asp-validation-for="Certification" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Starts">Starts</label>
                        <input asp-for="Starts" class="form-control" placeholder="Starts">
                        <span asp-validation-for="Starts" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration">Duration</label>
                        <input asp-for="Duration" class="form-control" placeholder="Duration">
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassDuration">ClassDuration</label>
                        <input asp-for="ClassDuration" class="form-control" placeholder="ClassDuration">
                        <span asp-validation-for="ClassDuration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Skill">Skill</label>
                        <input asp-for="Skill" class="form-control" placeholder="Skill">
                        <span asp-validation-for="Skill" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Language">Language</label>
                        <input asp-for="Language" class="form-control" placeholder="Language">
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Students">Students</label>
                        <input asp-for="Students" class="form-control" placeholder="Students">
                        <span asp-validation-for="Students" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Assesments">Assesments</label>
                        <input asp-for="Assesments" class="form-control" placeholder="Assesments">
                        <span asp-validation-for="Assesments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" placeholder="Category"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                    <label asp-for="ButtonUrl">ButtonUrl</label>
                    <input asp-for="ButtonUrl" class="form-control" placeholder="ButtonUrl">
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                    </div>*@

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>




