@model IEnumerable<FooterContact>
@{
    IEnumerable<FooterContact> footerContacts = Model;
    ViewData["Title"] = "Index";
}

<div class="row col-lg-12">
    <div class="col-lg-11 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>SecondAddress</th>
                                <th>PhoneNumber</th>
                                <th>SecondPhoneNumber</th>
                                <th>Email</th>
                                <th>Website</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    
                                    <td>
                                        @item.Address
                                    </td>
                                    <td>
                                        @item.SecondAddress
                                    </td>
                                    <td>
                                        @item.PhoneNumber
                                    </td>
                                    <td>
                                        @item.SecondPhoneNumber
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                     <td>
                                        @item.Website
                                    </td>

                                    <td class="text-nowrap">
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                <button class="btn btn-danger" id="delete-category" value="@item.Id">Delete</button>
                                            </form>
                                        </div>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>